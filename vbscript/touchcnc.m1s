Sub Main()	Dim exitNow, filePath, commandText		filePath$ = InputBox("Please enter a path to your GCode file","GCode File Path")	Open filePath$ For Append As #1	Close 1	exitNow = 0			Open filePath$ For Input As #1	Do		Do While EOF(1) 'spin until we have something to read		Loop				Do While Not EOF(1)			Line Input #1, commandText						If commandText <> "" Then				Code(commandText)				Do While isMoving() 'just spin until moving is done...				Loop			End If						If commandText = "exit" Then				exitNow = 1			End If		Loop		If exitNow = 1 Then			Exit Do		End If	LoopEnd Sub  